<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script type="text/javascript" src="/js/jquery-3.5.1.js"></script>
    <title>PakWork | Admin Panel</title>
</head>

<body class="h-100">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-12 mt-2">
                <div class="mt-4 d-flex flex-column justify-content-center align-items-center">
                    <div style="max-width: 420px;padding:30px;box-shadow:0 .1rem .5rem rgba(0,0,0,.15);">
                        <img src="/images/pakwork_logo.svg" alt="pakwork_logo.svg"
                            style="width: 100%;height: 30px;margin-bottom: 10px;">
                        <h4 style="text-align: center;">
                            Admin Dashboard
                        </h4>
                        <p style="text-align: center;">Login to your account</p>
                        <form id="loginForm" method="POST" action="/api/v1/auth/login/admin"
                            class="d-flex justify-content-center flex-column">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" name="email" id="InputEmail"
                                    aria-describedby="emailHelp" placeholder="Your Email">
                                <div id="emailHelp" class="form-text">Please enter your email provided by your
                                    administrator.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" id="InputPassword"
                                    placeholder="Your Password">
                                <div id="passwordHelp" class="form-text">Please enter your password provided by
                                    your
                                    administrator.
                                </div>
                            </div>
                            <button id="loginButton" type="submit" class="btn btn-primary bg-success" style="border:0;">Submit</button>
                            <div class="form-text text-center">Incase of any issues, please contact your
                                administrator. <br><a href="/api/v1/register"> Register An administrator </a>
                            </div>
                            <div class="form-text text-center text-danger fw-bold">
                                <span id="error-message">Wrong Username or Password</span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            $("#error-message").hide();
        });

        $("#loginForm").submit((e) => {
            $("#error-message").hide();
            $("#loginButton").attr("disabled",true);
            e.preventDefault();
            let email = $("#InputEmail").val();
            let password = $("#InputPassword").val();
            fetch("/api/v1/auth/login/admin" , {
                method: "POST",
                headers: {'Content-Type' : 'application/json'},
                body: JSON.stringify({email,password})
            }).then(res => {
                if(res.status === 200) {
                    window.location.reload();
                } else if(res.status === 400) {
                   $("#error-message").show();
                   $("#loginButton").attr("disabled", false);
                }
            })
        });
    </script>

</body>

</html>